//%h2 新規登録
.new--registration
  %p 新規登録
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .registration__nickname
    = f.label :nickname, "ニックネーム"
    %span.class.must 必須
    %br/
    = f.text_field :nickname, placeholder: '例）フリマ華子'
  .registration__email
    = f.label :email, "Eメール"
    %span.class.must 必須
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可"
  .registration__password
    = f.label :password, "パスワード"
    %span.class.must 必須
    - if @minimum_password_length
      %em
        /(#{@minimum_password_length} )
    %br/
    = f.password_field :password, autocomplete: "new-password", placeholder: "６文字以上の半角英数字"
  .password__confirmation
    = f.label :password_confirmation, "確認用パスワード"
    %span.class.must 必須
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワードをもう一度入力してください"
  .registraion__name--contents
    = f.label :family_name, "お名前（全角）"
    %span.class.must 必須
    %br/
    = f.text_field :family_name, class:"contents-field__input half", placeholder: '例）山田'
    = f.text_field :first_name, class:"contents-field__input half", placeholder: '例）太郎'
  .registraion__namekana--contents
    = f.label :first_name, "お名前カナ（全角）"
    %span.class.must 必須
    %br/
    = f.text_field :family_name_kana, class:"contents-field__input half", placeholder: '例）ヤマダ'
    = f.text_field :first_name_kana, class:"contents-field__input half", placeholder: '例）タロウ'
  .registration__birth--date
    = f.label :birth_date, "生年月日"
    %span.class.must 必須
    %br/
    = f.date_select :birth_date, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1)
  .actions
    = f.submit "登録する", class: 'signin--btn'
= render "users/shared/links"
