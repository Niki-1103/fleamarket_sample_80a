//%h2 新規登録
.new_registration
  %p 新規登録
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .registration_nickname
    = f.label :nickname, "ニックネーム"
    %span.class.must 必須
    %br/
    = f.text_field :nickname, placeholder: '例）フリマ華子'
  .registration_email
    = f.label :email, "Eメール"
    %span.class.must 必須
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可"
  .registration_password
    = f.label :password, "パスワード"
    %span.class.must 必須
    - if @minimum_password_length
      %em
        /(#{@minimum_password_length} )
    %br/
    = f.password_field :password, autocomplete: "new-password", placeholder: "６文字以上の半角英数字"
  .password_confirmation
    = f.label :password_confirmation, "確認用パスワード"
    %span.class.must 必須
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワードをもう一度入力してください"
  .actions
    = f.submit "登録する", class: 'signin-btn'
= render "users/shared/links"
